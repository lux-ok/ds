{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,

    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // output
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": false
  }
}

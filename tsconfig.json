{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node", // "bundler"
    "target": "ESNext",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    // "removeComments": false,
    "lib": ["esnext", "dom"],
    "baseUrl": "./src", // 設置根路徑，方便模組引用
    "paths": {
      "@lux721/ds": ["./index.ts"],
      "@lux721/ds/func": ["./func/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"] // 排除 node_modules 目錄
}

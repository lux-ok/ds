{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node", // "bundler"
    "target": "ESNext",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    // "removeComments": false,
    "lib": ["esnext", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@lux-ok/ds": ["./index.ts"],
      "@lux-ok/ds/func": ["./func/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}

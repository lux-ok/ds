{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext", // 編譯為 ESNext 版本的 JavaScript
    "module": "ESNext", // 使用 ES 模塊
    "moduleDetection": "force",
    // "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler", // 'node'
    // "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    // "noEmit": true,

    // Best practices
    "strict": true, // 開啟所有嚴格檢查
    "skipLibCheck": true, // 跳過庫的類型檢查
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "outDir": "./dist", // 輸出編譯後的 JavaScript 文件
    "declaration": true, // 生成類型定義文件 (.d.ts)
    "declarationMap": true, // 生成 .d.ts 的映射文件
    "esModuleInterop": true, // 允許 ES 模塊與 CommonJS 模塊互操作
    "resolveJsonModule": true, // 允許導入 JSON 文件

    "removeComments": false // 保留 JSDoc 註解
  }
}
